<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/widget_latest_fixtures"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/widget_margin"
                android:background="@color/widget_background"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/widget_latest_match_padding_vertical"
                android:paddingTop="@dimen/widget_latest_match_padding_vertical">

    <ImageView
        android:id="@+id/home_crest"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/home_name"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher"
        />

    <TextView
        android:id="@+id/home_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/home_crest"
        android:layout_alignRight="@+id/home_crest"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="1"
        android:text="Test"
        android:textSize="@dimen/widget_latest_match_team_names"
        android:textStyle="bold"/>


    <TextView

        android:id="@+id/score_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_toEndOf="@+id/home_crest"
        android:layout_toLeftOf="@+id/away_crest"
        android:layout_toRightOf="@+id/home_crest"
        android:layout_toStartOf="@+id/away_crest"
        android:gravity="center"
        android:text="Test"
        android:textSize="@dimen/Score"
        android:textStyle="bold"/>

    <!-- Time -->
    <TextView
        android:id="@+id/date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score_textview"
        android:layout_gravity="center"
        android:layout_toEndOf="@+id/home_crest"
        android:layout_toLeftOf="@+id/away_crest"
        android:layout_toRightOf="@+id/home_crest"
        android:layout_toStartOf="@+id/away_crest"
        android:gravity="center"
        android:text="date"
        />

    <!-- Logo -->
    <ImageView
        android:id="@+id/away_crest"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/away_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher"
        />

    <!-- Name -->
    <TextView
        android:id="@+id/away_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/away_crest"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/away_crest"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="1"
        android:text="test"
        android:textSize="@dimen/widget_latest_match_team_names"
        android:textStyle="bold"/>


</RelativeLayout>